{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "allowJs": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": ".build",
    "lib": ["es2015"],
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@*": ["./src/*"]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
